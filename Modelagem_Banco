/* O COMANDO SELECT 
seleção,projeção e conjunção */

SELECT now();

SELECT 'FELIPE MAFRA';

SELECT 'BANCO DE DADOS';

/* ALIAS DE COLUNAS */

SELECT NOME,SEXO,EMAIL FROM CLIENTE;

SELECT NOME,SEXO,EMAIL,ENDERECO FROM CLIENTE;

SELECT NOME,SEXO,EMAIL,ENDERECO,NOW() as Data_Hora FROM CLIENTE;

/* FILTRANDO DADOS COM WHERE E LIKE */

SELECT NOME,TELEFONE FROM CLIENTE;

/* FILTRANDO */

SELECT NOME,ENDERECO FROM CLIENTE;
WHERE SEXO = 'M';

SELECT NOME,ENDERECO FROM CLIENTE
WHERE SEXO = 'F';

SELECT NOME,SEXO FROM CLIENTE
WHERE ENDERECO = 'RJ';

/* UTILIZANDO O LIKE */

SELECT NOME,SEXO FROM CLIENTE
WHERE ENDERECO LIKE 'RJ';

/* CARACTER CORINGA % -> QUALQUER COISA */

SELECT NOME,SEXO FROM CLIENTE
WHERE ENDERECO LIKE '%RJ';

/* RESELVENDO O EXERCICIO */

CREATE DATABASE LIVRARIA;

CREATE TABLE LIVROS(
	LIVRO VARCHAR(100),
	AUTOR VARCHAR(100),
	SEXO CHAR(1),
	PAGINAS INT(5),
	EDITORA VARCHAR(30),
	VALOR FLOAT(10,2),
	UF CHAR(2),
	ANO INT(4)
);
/* VERIFICANDO OS BANCOS */
SHOW DATABASES;

/* CONECTANDO A UM BANCO */
USE LIVRARIA;

